{
  "name": "backend",
  "version": "0.0.0",
  "scripts": {
    "build": "node build.js && tsc --build tsconfig.prod.json",
    "lint": "tslint --project \"tsconfig.json\"",
    "start": "node -r module-alias/register ./dist --env=production",
    "start:dev": "nodemon",
    "test": "npx jest --runInBand --detectOpenHandles --colors --verbose --reporters=default",
    "test:ci": "jest --ci --runInBand --silent --colors --coverage",
    "test:watch": "jest --watch"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@daos": "dist/daos",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/Server"
  },
  "dependencies": {
    "@graphql-tools/schema": "^6.2.3",
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.161",
    "@types/uuid": "^8.3.0",
    "apollo-server": "^2.18.2",
    "class-validator": "^0.12.2",
    "command-line-args": "^5.1.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "graphql": "^15.3.0",
    "helmet": "^4.1.1",
    "http-status-codes": "^2.1.4",
    "jsonfile": "^6.0.1",
    "lodash": "^4.17.20",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "object-path": "^0.11.5",
    "reflect-metadata": "^0.1.13",
    "subscriptions-transport-ws": "^0.9.18",
    "tslib": "^2.0.1",
    "type-graphql": "^1.0.0",
    "typedi": "^0.8.0",
    "uuid": "^8.3.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.8",
    "@types/find": "^0.2.1",
    "@types/helmet": "0.0.48",
    "@types/jest": "^26.0.15",
    "@types/jsonfile": "^6.0.0",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.11.2",
    "@types/supertest": "^2.0.10",
    "find": "^0.3.0",
    "fs-extra": "^9.0.1",
    "jest": "^26.6.1",
    "jest-junit": "^12.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.2",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  }
}
